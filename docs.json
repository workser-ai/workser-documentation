  "favicon": "/favicon.ico",
  "navigation": {
    "tabs": [
      {
        "tab": "Guides",
        "groups": [
          {
            "group": "Getting started",
            "pages": [
              "index",
              "quickstart"
            ]
          }
        ]
      },
      {
        "tab": "How to",
        "groups": [
          {
            "group": "Internal Use",
            "pages": [
              "/how-to/internal-tools"
            ]
          }
        ]
      },
      {
        "tab": "API reference",
        "groups": [
          {
            "group": "API documentation",
            "pages": [
              "api-reference/introduction"
            ]
          }
        ]
      }
    ],
    "groups":[{
            "group": "API reference",
            "openapi": "api-reference/openapi.json"
          }],
    "global": {
      "anchors": [
        {
          "anchor": "Workser",
          "href": "https://workser.ai",
          "icon": "book-open-cover"
        }
      ]
    }
  },
  "logo": {
    "light": "/logo/workser-trademark.png",
    "dark": "/logo/workser-trademark.png"
  },
  "navbar": {
    "links": [
      {
        "label": "Support",
        "href": "mailto:support@workser.ai"
      }
