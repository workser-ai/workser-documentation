    ]
  },
  "footer": {
    "socials": {
      "x": "https://x.com/workserai",
      "linkedin": "https://www.linkedin.com/company/workser/?viewAsMember=true"
    }
  },
  "api": {
   "playground": {
     "display": "interactive"
   },
   "examples": {
     "languages": ["curl", "python", "javascript", "typescript", "go", "java", "ruby"],
